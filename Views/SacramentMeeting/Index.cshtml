@model IEnumerable<sacramentMeetingPlanner.Models.SacramentMeeting>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create Meeting</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Invocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Benediction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpeningHymnID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SacramentHymnID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MusicalNumberID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MusicalPerformance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClosingHymnID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PresidingID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConductingID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Invocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Benediction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningHymn.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SacramentHymn.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MusicalNumber.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MusicalPerformance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingHymn.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DismissalHymn.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Presiding.Calling)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conducting.Calling)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SacramentMeetingID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SacramentMeetingID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SacramentMeetingID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
